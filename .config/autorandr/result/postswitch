#!/bin/sh

echo "Xft.dpi: 110" | xrdb -merge

### BSPWM ###
bspc monitor DP2-1 DP2-2
bspc monitor DP2-1 -d 1 2 3 4 5
bspc monitor DP2-2 -d 6 7 8 9 10

# bspwm border settings
bspc config border_width                3
bspc config window_gap                  -3
bspc config top_padding                 50
