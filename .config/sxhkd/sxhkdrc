### wm independent hotkeys ###

# terminal emulator
super + Return
	alacritty

# program launcher
super + c
        rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# volume control
XF86AudioRaiseVolume
        amixer set Master 5%+
XF86AudioLowerVolume
        amixer set Master 5%-
XF86AudioMute
        amixer set Master toggle

# Open the browser
super + b
        brave

# Toggle bar
super + x
	polybar-msg cmd toggle

# Open the screenshot utility
@Print
        flameshot gui

#Pulsemixer
super + v
        $HOME/.config/sxhkd/toggle_window.sh -w Popup \
        -c "alacritty --class Popup -t Pulsemixer -e pulsemixer" \
        -p center

# Scratchpad 1
super + s
        $HOME/.config/sxhkd/toggle_window.sh -w Scratchpad_1 \
        -c "alacritty --config-file=$HOME/.config/alacritty/alternative.yml --class Scratchpad_1 -t Left-Scratchpad -e $HOME/.config/sxhkd/scratchpad_startup.sh" \
        -p left

# Scratchpad 2
super + d
        $HOME/.config/sxhkd/toggle_window.sh -w Scratchpad_2 \
        -c "alacritty --config-file=$HOME/.config/alacritty/alternative.yml --class Scratchpad_2 -t Right-Scratchpad -e $HOME/.config/sxhkd/scratchpad_startup.sh" \
        -p right


### i3 hotkeys ###

# quit/restart i3
super + shift + {d,f}
	{i3-msg exit,i3-msg restart}

# close and kill
super + a
	i3-msg kill

#
# state/flags
#

# set the window state
super + {comma,period,minus}
	i3-msg layout {toggle split,tabbed,stacking}

super + {m,n}
	i3-msg {fullscreen toggle; polybar-msg cmd toggle,floating toggle}

#
# focus/swap
#

# focus/move the window in the given direction
super + {_,shift + }{h,j,k,l}
	i3-msg {focus,move} {left,down,up,right}


# change focus mode floating/tiled
super + g
	i3-msg focus mode_toggle

# focus or send to the given desktop
super + {_,shift + }{q,w,e,r,t,z,u,i,o,p}
	i3-msg {workspace,move container to workspace} {1-9,10}

#
# preselect
#

#
# move/resize
#

# resize a window by moving its sides
super + alt + {h,j,k,l}
	i3-msg resize {shrink width,grow height,shrink height,grow width} 10 px
